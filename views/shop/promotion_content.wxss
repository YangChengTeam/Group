/* views/shop/promotion_content.wxss */

page {
  background: #fff;
  padding: 0 0 250rpx 0;
}

.g-list-box {
  width: 100%;
  height: auto;
  padding: 0 30rpx 30rpx 15rpx;
  box-sizing: border-box;
  display: block;
  overflow: hidden;
}

.g-list-box .m-cont {
  width: 235rpx;
  height: auto;
  padding: 30rpx 0 0 15rpx;
  box-sizing: border-box;
  float: left;
  display: block;
  overflow: hidden;
  position: relative;
}

.g-list-box .m-cont image {
  width: 220rpx;
  height: 220rpx;
  margin: auto;
  display: block;
  overflow: hidden;
  border-radius: 14rpx;
  margin: 0;
  padding: 0;
  display: block;
  overflow: hidden;
}

.g-list-box .m-cont .u-hover {
  width: 35rpx;
  height: 35rpx;
  background: #ff3750;
  border: 2rpx solid #fff;
  border-radius: 100%;
  display: block;
  overflow: hidden;
  position: absolute;
  right: 20rpx;
  top: 40rpx;
  z-index: 5;
}

.g-list-box .m-cont .u-hover::before {
  content: "";
  width: 12rpx;
  height: 4rpx;
  background: #fff;
  display: block;
  overflow: hidden;
  position: absolute;
  left: 8rpx;
  top: 18rpx;
  z-index: 5;
  transform: rotate(45deg);
}

.g-list-box .m-cont .u-hover::after {
  content: "";
  width: 18rpx;
  height: 4rpx;
  background: #fff;
  display: block;
  overflow: hidden;
  position: absolute;
  left: 14rpx;
  top: 18rpx;
  z-index: 5;
  transform: rotate(-45deg);
}

.g-foot-btn {
  width: 100%;
  height: 205rpx;
  padding: 60rpx 0 0;
  background: #fff;
  box-sizing: border-box;
  display: -webkit-box;
  overflow: hidden;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
}

.g-foot-btn .u-cancel {
  width: 277rpx;
  height: 90rpx;
  line-height: 90rpx;
  border: 1px solid #bfbfbf;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: normal;
  color: #bfbfbf;
  text-align: center;
  display: block;
  overflow: hidden;
  margin: 0 0 0 30rpx;
  box-sizing: border-box;
}

.g-foot-btn .u-save {
  width: auto;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  font-weight: normal;
  color: #fff;
  text-align: center;
  background: #ff586e;
  border-radius: 44rpx;
  margin: 0 30rpx;
  display: block;
  overflow: hidden;
  -webkit-box-flex: 1;
}
