/* views/my/red_envelope.wxss */

page {
  background: #f5f5f5;
  padding: 0 0 0 0;
}

/*会员信息*/

.g-user-box {
  width: 100%;
  height: 330rpx;
  background: linear-gradient(to bottom right, #ff3434, #ff9090);
  display: block;
  overflow: hidden;
  position: relative;
}

.g-user-box .u-user-img {
  width: 110rpx;
  height: 110rpx;
  border-radius: 100%;
  border: 4rpx solid #fff;
  margin: 45rpx auto 0;
  display: block;
  overflow: hidden;
}

.g-user-box .u-user-name {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 36rpx;
  font-weight: normal;
  color: #fff;
  text-align: center;
  margin: 30rpx auto 0;
  display: block;
  overflow: hidden;
}

.g-user-box .u-user-msg {
  width: 100%;
  height: 26rpx;
  line-height: 26rpx;
  font-size: 24rpx;
  font-weight: normal;
  color: #fff;
  text-align: center;
  margin: 30rpx 0 0;
  display: block;
  overflow: hidden;
}

.g-user-box .u-dhhb-btn {
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  font-weight: normal;
  color: #fff;
  text-align: center;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 44rpx;
  display: block;
  overflow: hidden;
  position: absolute;
  right: 40rpx;
  top: 46rpx;
  z-index: 5;
}

/*切换按钮*/

.g-use-tab {
  width: 100%;
  height: auto;
  padding: 0 120rpx;
  box-sizing: border-box;
  display: flex;
  overflow: hidden;
  background: #fff;
}

.g-use-tab view {
  width: auto;
  height: 90rpx;
  display: block;
  overflow: hidden;
  flex: 1;
  text-align: center;
}

.g-use-tab view text {
  width: auto;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  font-weight: normal;
  color: #000;
  display: inline-block;
  overflow: hidden;
  box-sizing: border-box;
  border-bottom: 4rpx solid #fff;
}

.g-use-tab view.f-hover text {
  border-color: #f35052;
  color: #f35052;
  font-weight: bold;
}

/*优惠券*/

.g-roll-box {
  width: 707rpx;
  height: auto;
  margin: auto;
  display: block;
  overflow: hidden;
  position: relative;
}

.g-roll-box .m-roll-cont {
  width: 100%;
  height: auto;
  margin: 30rpx auto 0;
  display: block;
  overflow: hidden;
  position: relative;
}

.g-roll-box .m-roll-cont .m-cont {
  width: 100%;
  height: 148rpx;
  display: -webkit-box;
  overflow: hidden;
  position: relative;
  z-index: 5;
}

.g-roll-box .m-roll-cont .m-cont .m-left {
  width: auto;
  height: auto;
  display: block;
  overflow: hidden;
  -webkit-box-flex: 1;
}

.g-roll-box .m-roll-cont .m-cont .m-left .m-left-top {
  width: 100%;
  height: auto;
  display: -webkit-box;
  overflow: hidden;
  margin: 26rpx 0 0 35rpx;
}

.g-roll-box .m-roll-cont .m-cont .m-left .m-left-top .u-t1 {
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  font-weight: normal;
  color: #fff;
  text-align: center;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 8rpx;
  display: block;
  overflow: hidden;
}

.g-roll-box .m-roll-cont .m-cont .m-left .m-left-top .u-t2 {
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  font-weight: normal;
  color: #fff;
  margin: 0 0 0 15rpx;
  display: block;
  overflow: hidden;
  -webkit-box-flex: 1;
}

.g-roll-box .m-roll-cont .m-cont .m-left .m-left-bottom {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 28rpx;
  font-weight: normal;
  color: #fff;
  display: block;
  overflow: hidden;
  margin: 18rpx 0 0 35rpx;
}

.g-roll-box .m-roll-cont .m-cont .m-right {
  width: 120rpx;
  height: auto;
  margin: 0 25rpx 0 60rpx;
  display: block;
  overflow: hidden;
}

.g-roll-box .m-roll-cont .m-cont .m-right .m-right-top {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: normal;
  color: #fff;
  text-align: center;
  display: block;
  overflow: hidden;
  margin: 22rpx 0 0;
}

.g-roll-box .m-roll-cont .m-cont .m-right .m-right-top text {
  font-size: 40rpx;
  font-weight: bold;
}

.g-roll-box .m-roll-cont .m-cont .m-right .m-right-bottom {
  width: 120rpx;
  height: 36rpx;
  margin: 12rpx 0 0;
  display: block;
  overflow: hidden;
}

.g-roll-box .m-roll-cont .u-roll-bg {
  width: 707rpx;
  height: 148rpx;
  display: block;
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 0;
}
