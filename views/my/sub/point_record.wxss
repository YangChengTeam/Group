/* views/my/sub/point_record.wxss */

page {
  background: #f5f5f5;
  padding: 0 0 0 0;
}

.g-white-box {
  width: 100%;
  height: auto;
  padding: 35rpx 130rpx 35rpx 40rpx;
  box-sizing: border-box;
  margin: 10rpx 0 0;
  background: #fff;
  display: -webkit-box;
  overflow: hidden;
  position: relative;
}

.g-white-box .m-left {
  width: auto;
  height: auto;
  display: block;
  overflow: hidden;
  -webkit-box-flex: 1;
}

.g-white-box .m-left .u-t1 {
  width: 100%;
  height: auto;
  line-height: 48rpx;
  font-size: 28rpx;
  font-weight: normal;
  color: #000;
  display: block;
  overflow: hidden;
}

.g-white-box .m-left .u-t2 {
  width: 100%;
  height: 27rpx;
  line-height: 27rpx;
  font-size: 24rpx;
  font-weight: normal;
  color: #aaa;
  margin: 20rpx 0 0;
  display: block;
  overflow: hidden;
}

.g-white-box .m-right {
  width: auto;
  height: auto;
  font-size: 32rpx;
  font-weight: normal;
  color: #f35052;
  display: table;
  overflow: hidden;
  margin: 0;
  position: absolute;
  right: 35rpx;
  top: 50%;
  transform: translateY(-50%);
}
