/* views/my/sub/exchange_red_envelope.wxss */

page {
  background: #f5f5f5;
  padding: 0 0 200rpx 0;
}

/*会员信息*/

.g-user-box {
  width: 100%;
  height: 180rpx;
  background: #ff7577;
  display: -webkit-box;
  overflow: hidden;
  position: relative;
}

.g-user-box .u-user-img {
  width: 110rpx;
  height: 110rpx;
  border-radius: 100%;
  border: 4rpx solid #fff;
  margin: 35rpx 35rpx 0;
  display: block;
  overflow: hidden;
}

.g-user-box .u-user-name {
  width: auto;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 36rpx;
  font-weight: normal;
  color: #fff;
  margin: 35rpx 0 0;
  display: block;
  overflow: hidden;
  -webkit-box-flex: 1;
}

.g-user-box .m-user-score {
  width: auto;
  height: auto;
  margin: 55rpx 0 0;
  display: block;
  overflow: hidden;
}

.g-user-box .m-user-score .u-t1 {
  width: 100%;
  height: 26rpx;
  line-height: 26rpx;
  font-size: 24rpx;
  font-weight: normal;
  color: #fff;
  text-align: center;
  display: block;
  overflow: hidden;
}

.g-user-box .m-user-score .u-t2 {
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  margin: 11rpx 0 0;
  display: block;
  overflow: hidden;
}

.g-user-box .u-user-icon {
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #fff;
  border-right: 4rpx solid #fff;
  transform: rotate(45deg);
  display: block;
  overflow: hidden;
  margin: 80rpx 30rpx 0 25rpx;
}

/*优惠券*/

.g-roll-box {
  width: 707rpx;
  height: auto;
  margin: auto;
  display: block;
  overflow: hidden;
  position: relative;
}

.g-roll-box .m-roll-cont {
  width: 100%;
  height: auto;
  margin: 30rpx auto 0;
  display: block;
  overflow: hidden;
  position: relative;
}

.g-roll-box .m-roll-cont .m-cont {
  width: 100%;
  height: 121rpx;
  display: -webkit-box;
  overflow: hidden;
  position: relative;
  z-index: 5;
}

.g-roll-box .m-roll-cont .m-cont .m-left {
  width: auto;
  height: auto;
  display: block;
  overflow: hidden;
  -webkit-box-flex: 1;
}

.g-roll-box .m-roll-cont .m-cont .m-left .m-left-top {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  overflow: hidden;
  margin: 20rpx 0 0 35rpx;
}

.g-roll-box .m-roll-cont .m-cont .m-left .m-left-bottom {
  width: 100%;
  height: auto;
  display: -webkit-box;
  overflow: hidden;
  margin: 12rpx 0 0 35rpx;
}

.g-roll-box .m-roll-cont .m-cont .m-left .m-left-bottom .u-t1 {
  width: auto;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 30rpx;
  font-weight: normal;
  color: #f35052;
  display: block;
  overflow: hidden;
}

.g-roll-box .m-roll-cont .m-cont .m-left .m-left-bottom .u-t2 {
  width: auto;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  font-weight: normal;
  color: #fff;
  background: #ff7577;
  padding: 0 12rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  margin: 0 0 0 15rpx;
  display: block;
  overflow: hidden;
}

.g-roll-box .m-roll-cont .m-cont .m-right {
  width: 120rpx;
  height: auto;
  margin: 0 25rpx 0 60rpx;
  display: block;
  overflow: hidden;
}

.g-roll-box .m-roll-cont .m-cont .m-right .m-right-top {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: normal;
  color: #f35052;
  text-align: center;
  display: block;
  overflow: hidden;
  margin: 36rpx 0 0;
}

.g-roll-box .m-roll-cont .m-cont .m-right .m-right-top text {
  font-size: 40rpx;
  font-weight: bold;
}

.g-roll-box .m-roll-cont .m-cont-bottom {
  width: auto;
  height: 52rpx;
  border-top: 1px dashed #eee;
  margin: 0 35rpx 0;
  display: -webkit-box;
  overflow: hidden;
  position: relative;
  z-index: 5;
}

.g-roll-box .m-roll-cont .m-cont-bottom .u-date {
  width: auto;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 20rpx;
  font-weight: normal;
  color: #aaa;
  display: block;
  overflow: hidden;
  -webkit-box-flex: 1;
}

.g-roll-box .m-roll-cont .m-cont-bottom .u-btn {
  width: 122rpx;
  height: 38rpx;
  line-height: 34rpx;
  border: 2rpx solid #f35052;
  font-size: 22rpx;
  font-weight: normal;
  color: #f35052;
  text-align: center;
  border-radius: 44rpx;
  box-sizing: border-box;
  display: block;
  overflow: hidden;
  margin: 8rpx 0 0;
}

.g-roll-box .m-roll-cont .u-roll-bg {
  width: 707rpx;
  height: 174rpx;
  display: block;
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 0;
}

/*按钮*/

.g-btn-box {
  width: 100%;
  height: 140rpx;
  background: #fff;
  display: block;
  overflow: hidden;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
}

.g-btn-box view {
  width: 680rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  font-weight: normal;
  color: #fff;
  text-align: center;
  background: #f35052;
  border-radius: 88rpx;
  margin: 25rpx auto 0;
  display: block;
  overflow: hidden;
}
