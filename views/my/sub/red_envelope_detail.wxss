/* views/my/sub/red_envelope_detail.wxss */

page {
  background: #fff;
  padding: 0 0 0 0;
}

.u-top-bg {
  width: 750rpx;
  height: 436rpx;
  display: block;
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 0;
}

/*红包*/

.g-hongbao-box {
  width: 708rpx;
  height: 500rpx;
  padding: 10rpx 14rpx;
  box-sizing: border-box;
  display: block;
  overflow: hidden;
  position: relative;
  margin: 182rpx auto 0;
}

.g-hongbao-box .m-hg-cont {
  width: 100%;
  height: auto;
  display: block;
  overflow: hidden;
  position: relative;
  z-index: 5;
  padding: 0 0 20rpx 0;
}

.g-hongbao-box .m-hg-cont .u-h1 {
  width: 384rpx;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #eda431;
  text-align: center;
  margin: 52rpx auto 0;
  display: block;
  overflow: hidden;
}

.g-hongbao-box .m-hg-cont .u-h2 {
  width: 100%;
  height: 26rpx;
  line-height: 26rpx;
  font-size: 24rpx;
  font-weight: normal;
  color: #fc575a;
  text-align: center;
  margin: 16rpx 0 0;
  display: block;
  overflow: hidden;
}

.g-hongbao-box .m-hg-cont .u-money {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  font-weight: normal;
  color: #fc575a;
  text-align: center;
  margin: 25rpx 0 0;
  display: block;
  overflow: hidden;
}

.g-hongbao-box .m-hg-cont .u-money text {
  font-size: 72rpx;
  font-weight: bold;
}

.g-hongbao-box .m-hg-cont .m-time {
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  font-weight: normal;
  color: #000;
  margin: 32rpx 0 0;
  padding: 0 0 0 88rpx;
  box-sizing: border-box;
  display: -webkit-box;
  overflow: hidden;
  text-align: center;
}

.g-hongbao-box .m-hg-cont .m-time .u-t1 {
  width: 32rpx;
  height: 32rpx;
  color: #fff;
  background: #f35052;
  border-radius: 4rpx;
  display: block;
  overflow: hidden;
}

.g-hongbao-box .m-hg-cont .m-time .u-t2 {
  margin: 0 2rpx;
}

.g-hongbao-box .m-hg-cont .m-time .u-t3 {
  margin: 0 0 0 16rpx;
}

.g-hongbao-box .m-hg-cont .u-btn {
  width: 360rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #b56408;
  text-align: center;
  background: #ffe023;
  border-radius: 66rpx;
  box-shadow: 0px 8rpx #fa7e06;
  margin: 92rpx auto 0;
  display: block;
  overflow: hidden;
}

.g-hongbao-box .u-bg {
  width: 708rpx;
  height: 500rpx;
  margin: auto;
  display: block;
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 0;
}

/*标题*/

.g-title {
  width: 100%;
  height: auto;
  margin: 60rpx 0 0;
  text-align: center;
  display: block;
  overflow: hidden;
}

.g-title .m-text {
  width: auto;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 30rpx;
  font-weight: normal;
  color: #333;
  display: inline-block;
  overflow: hidden;
  padding: 0 60rpx;
  box-sizing: border-box;
  position: relative;
}

.g-title .m-text .u-icon-1 {
  width: 38rpx;
  height: 28rpx;
  display: block;
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 3rpx;
}

.g-title .m-text .u-icon-2 {
  width: 38rpx;
  height: 28rpx;
  display: block;
  overflow: hidden;
  position: absolute;
  right: 0;
  top: 3rpx;
}

/*列表*/

.g-list-box {
  width: 750rpx;
  height: auto;
  margin: 0 auto;
  padding: 0 10rpx 50rpx;
  box-sizing: border-box;
  box-sizing: border-box;
  display: block;
  overflow: hidden;
}

.g-list-box .m-cont {
  width: 320rpx;
  height: auto;
  margin: 30rpx 0 0 30rpx;
  box-sizing: border-box;
  float: left;
  display: inline;
  overflow: hidden;
}

.g-list-box .m-cont .m-img {
  width: 100%;
  height: auto;
  display: block;
  overflow: hidden;
  position: relative;
  border-radius: 18rpx;
}

.g-list-box .m-cont .m-img .u-img {
  width: 320rpx;
  height: 320rpx;
  display: block;
  overflow: hidden;
}

.g-list-box .m-cont .m-img text {
  width: auto;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 28rpx;
  font-weight: normal;
  color: #fff;
  padding: 0 14rpx;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 8rpx 0 0 0;
  display: block;
  overflow: hidden;
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 5;
}

.g-list-box .m-cont .u-title {
  width: 100%;
  height: 44rpx;
  max-height: 88rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  font-weight: normal;
  color: #333;
  margin: 20rpx 0 0;
  display: block;
  overflow: hidden;
}

.g-list-box .m-cont .u-buy {
  width: 100%;
  height: 56rpx;
  line-height: 56rpx;
  display: -webkit-box;
  overflow: hidden;
  margin: 20rpx 0 0;
}

.g-list-box .m-cont .u-buy .u-money-1 {
  width: auto;
  font-size: 40rpx;
  font-weight: bold;
  color: #ff2741;
  display: block;
  overflow: hidden;
}

.g-list-box .m-cont .u-buy .u-money-2 {
  width: auto;
  line-height: 66rpx;
  font-size: 30rpx;
  font-weight: normal;
  color: #d0d0d0;
  text-decoration: line-through;
  margin: 0 0 0 20rpx;
  display: block;
  overflow: hidden;
  -webkit-box-flex: 1;
}
