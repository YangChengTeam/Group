/* views/my/client.wxss */

page {
  background: #f3f5fb;
  padding: 0 0 20rpx 0;
}

.g-white-box {
  width: 100%;
  height: auto;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: block;
  overflow: hidden;
  background: #fff;
  border-top: 1px solid #eee;
}

.g-white-box .m-cont {
  width: 100%;
  height: auto;
  display: -webkit-box;
  overflow: hidden;
}

.g-white-box .m-cont .u-face {
  width: 88rpx;
  height: 88rpx;
  border-radius: 100%;
  display: block;
  overflow: hidden;
  margin: 30rpx 0 0;
}

.g-white-box .m-cont .m-cont-right {
  width: auto;
  height: 143rpx;
  border-bottom: 1px solid #e8e8e8;
  margin: 0 0 0 30rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-flex: 1;
}

.g-white-box .m-cont .m-msg {
  width: 100%;
  height: auto;
  display: block;
  overflow: hidden;
  -webkit-box-flex: 1;
}

.g-white-box .m-cont .m-msg .u-name {
  width: 100%;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3035;
  margin: 40rpx 0 0;
  display: block;
  overflow: hidden;
}

.g-white-box .m-cont .m-msg .u-date {
  width: 100%;
  height: 26rpx;
  line-height: 26rpx;
  font-size: 24rpx;
  font-weight: normal;
  color: #5a5e64;
  margin: 14rpx 0 0;
  display: block;
  overflow: hidden;
}

.g-white-box .m-cont .u-labei {
  width: 107rpx;
  height: 58rpx;
  line-height: 56rpx;
  border: 1px solid #ff2741;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  font-weight: normal;
  color: #ff2741;
  text-align: center;
  display: block;
  overflow: hidden;
  margin: 45rpx 0 0;
}


.u-loading {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 24rpx;
  font-weight: normal;
  color: #7b7d83;
  text-align: center;
  display: block;
  overflow: hidden;
}