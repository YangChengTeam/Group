/* views/my/sub/order_comment.wxss */

page {
  background: #f3f5fb;
  padding: 0 0 200rpx 0;
}

.g-main-box {
  width: 100%;
  height: auto;
  background: #fff;
  display: block;
  overflow: hidden;
  padding: 30rpx;
  box-sizing: border-box;
}

.g-main-box .m-goods-box {
  width: 100%;
  height: auto;
  display: -webkit-box;
  overflow: hidden;
}

.g-main-box .m-goods-box image {
  width: 154rpx;
  height: 154rpx;
  border-radius: 14rpx;
  display: block;
  overflow: hidden;
}

.g-main-box .m-goods-box text {
  width: auto;
  height: auto;
  line-height: 37rpx;
  font-size: 26rpx;
  font-weight: normal;
  color: #2c3035;
  margin: 0 0 0 30rpx;
  display: block;
  overflow: hidden;
  -webkit-box-flex: 1;
}

.g-main-box .m-score-box {
  width: 100%;
  height: auto;
  margin: 30rpx 0 0;
  display: -webkit-box;
  overflow: hidden;
}

.g-main-box .m-score-box text {
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  font-weight: normal;
  color: #2c3035;
  display: block;
  overflow: hidden;
}

.g-main-box .m-score-box .m-score-img {
  width: auto;
  height: auto;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-flex: 1;
}

.g-main-box .m-score-box .m-score-img .u-img {
  width: 40rpx;
  height: 40rpx;
  margin: 0 0 0 18rpx;
  display: block;
  overflow: hidden;
}

.g-main-box .m-score-box .m-score-img .u-img image {
  width: 40rpx;
  height: 40rpx;
  display: block;
  overflow: hidden;
}

.g-main-box .m-comment-box {
  width: 100%;
  height: auto;
  display: block;
  overflow: hidden;
  position: relative;
  padding: 0 0 50rpx 0;
  box-sizing: border-box;
  border: 2rpx solid #ddd;
  margin: 30rpx 0 0;
  border-radius: 10rpx;
}

.g-main-box .m-comment-box textarea {
  width: 100%;
  height: 220rpx;
  padding: 20rpx;
  box-sizing: border-box;
  line-height: 38rpx;
  font-size: 28rpx;
  font-weight: normal;
  color: #000;
  display: block;
  overflow: hidden;
}

.g-main-box .m-comment-box text {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 22rpx;
  font-weight: normal;
  color: #4c4c4c;
  padding: 0;
  box-sizing: border-box;
  text-align: right;
  display: block;
  overflow: hidden;
  position: absolute;
  right: 20rpx;
  bottom: 0;
  z-index: 5;
}

.m-phone-box {
  width: 100%;
  height: auto;
  padding: 0 0 30rpx 0;
  box-sizing: border-box;
  display: block;
  overflow: hidden;
}

.m-phone-box image {
  width: 150rpx;
  height: 150rpx;
  float: left;
  margin: 30rpx 30rpx 0 0;
  display: inline;
  overflow: hidden;
}

.m-phone-box .u-upimg-btn {
  width: 150rpx;
  height: 150rpx;
  margin: 30rpx 0 0 0;
  float: left;
  display: inline;
  overflow: hidden;
}

.m-phone-box .u-upimg-btn image {
  width: 150rpx;
  height: 150rpx;
  margin: 0;
  float: none;
  display: block;
  overflow: hidden;
}

.u-foot-tips {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  font-weight: normal;
  color: #aaa;
  text-align: center;
  display: block;
  overflow: hidden;
}

.g-foot-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  font-weight: normal;
  color: #000;
  text-align: center;
  background: #fff;
  display: -webkit-box;
  overflow: hidden;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 99;
}

.g-foot-btn .u-cancel {
  width: 300rpx;
  display: block;
  overflow: hidden;
}

.g-foot-btn .u-common-submit {
  width: auto;
  display: block;
  overflow: hidden;
  background: #ff2741;
  color: #fff;
  -webkit-box-flex: 1;
}
