/* components/nav/nav.wxss */
.nav-content {
   width: 100%;
   height: 100%;
   display: flex;
   flex-direction: row;
   position: absolute;
   align-items: center;
   left: 0;
   top: 0;
   z-index: 2;
}

.nav-back-wrapper {
   width: 60rpx;
   height: 100%;
   display: flex;
   flex-direction: row;
   align-items: center;
   justify-content: center;
   margin-top:2rpx;
}

.nav-back {
   width: 18rpx;
   height: 36rpx;   
}

.nav-title {
   margin-left: 16rpx;
}

.nav-search {
   width: 100%;
   height: 100%;
   display: flex;
   align-content: center;
   justify-content: center;
   position: absolute;
   align-items: center;
   left: 0;
   top: 0;
   z-index: 3;
}

.nav-search input {
   width: 200rpx;
   height: 20rpx;
   background: #eee;
   border: #ddd solid 1rpx;
   border-radius: 10rpx;
   font-size: 18rpx;
}

.placeholder-input {
   color:#fff;
}

