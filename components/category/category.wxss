/* components/category.wxss */

.category {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 160rpx;
}

.category-wrapper {
  display: flex;
  flex-direction: row;
  width: auto;
  height: 100%;
}

.category-item {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 80rpx;
}

.category-title {
  font-size: 20rpx;
}