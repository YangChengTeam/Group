/* components/loading/loading.wxss */

.loading {
   width: 100%;
   height: 100%;
   position: absolute;
   display: flex;
   flex-direction: column;
   font-size: 24rpx;
   color: #999;
   justify-content: center;
   align-items: center;
   left: 0;
   top: 0;
   overflow: hidden;
}

.loading image {
   width: 80rpx;
   height: 80rpx;
}

.loading .version {
  font-size: 16rpx;
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  text-align: center;
  color: #ddd;
}