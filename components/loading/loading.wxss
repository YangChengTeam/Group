/* components/loading/loading.wxss */

.loading {
  width: 100%;
  position: absolute;
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #999;
  left: 0;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.loading image {
  width: 100rpx;
  height: 100rpx;
}

.loading-text {
  margin-top: 10rpx;
}

.loading .version {
  font-size: 24rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  color: #999;
}
