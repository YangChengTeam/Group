/* components/shop-tab-bar/tab-bar.wxss */
.g-foot-box {
  width: 100%;
  height: 95rpx;
  display: flex;
  overflow: hidden;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999999;
  border-top: 1px solid #eceef1;
}

.g-foot-box view {
  width: auto;
  height: auto;
  display: block;
  overflow: hidden;
  flex: 1;
}

.g-foot-box view image {
  width: 44rpx;
  height: 44rpx;
  margin: 11rpx auto 0;
  display: block;
  overflow: hidden;
  -webkit-filter: grayscale(88%);
  -moz-filter: grayscale(88%);
  -ms-filter: grayscale(88%);
  -o-filter: grayscale(88%);
  filter: grayscale(88%);
  filter: gray;
}

.g-foot-box view text {
  width: 100%;
  height: 24rpx;
  line-height: 24rpx;
  font-size: 20rpx;
  font-weight: normal;
  color: #9ea0a7;
  text-align: center;
  margin: 11rpx 0 0;
  display: block;
  overflow: hidden;
}

.g-foot-box view.f-hover image {
  -webkit-filter: grayscale(0%);
  -moz-filter: grayscale(0%);
  -ms-filter: grayscale(0%);
  -o-filter: grayscale(0%);
  filter: grayscale(0%);
  filter: gray;
}

.g-foot-box view.f-hover text {
  color: #f32a51;
}
